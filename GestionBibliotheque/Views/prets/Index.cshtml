@model IEnumerable<GestionBibliotheque.Models.prets>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Enregistrer un prêt", "Create") 
    @Html.ActionLink("Voir les prêts en retard", "Retards")
</p>
<div class="table-wrapper">
    <table class="alt">
        <thead>
            <tr>
                <th>
                    @Html.Label("Prénom")
                </th>
                <th>
                    @Html.Label("Nom")
                </th>
                <th>
                    @Html.Label("Titre")
                </th>
                <th>
                    @Html.Label("Date du prêt")
                </th>

                <th>
                    @Html.Label("Date du retour")
                </th>
                <th></th>
            </tr>
       </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.membres.prenom)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.membres.nom)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.livres.titre)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.datePret)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.dateRetourPret)
                    </td>
                    <td>
                        @Html.ActionLink("Retour", "Edit", new { id = item.idPret }) |
                        @Html.ActionLink("Détails", "Details", new { id = item.idPret }) |
                        @Html.ActionLink("Supprimer", "Delete", new { id = item.idPret })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>