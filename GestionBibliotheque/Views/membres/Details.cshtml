    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <dl>
        <dt>
            @Html.Label("Prénom")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prenom)
        </dd>

        <dt>
            @Html.Label("Nom")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom)
        </dd>

        <dt>
            @Html.Label("Genre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.genre)
        </dd>

        <dt>
