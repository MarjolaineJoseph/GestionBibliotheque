@model GestionBibliotheque.Models.livres

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Voulez-vous supprimer ce livre?</h3>
<div>
    <dl>
        <dt>
            @Html.Label("Titre")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.titre)
        </dd>

        <dt>
            @Html.Label("Auteur")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.auteur)
        </dd>

        <dt>
            @Html.Label("Nombre de page")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nbPage)
        </dd>

        <dt>
            @Html.Label("Catégorie")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categorie)
        </dd>

        <dt>
            @Html.Label("Année d'édition")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.anneeeEdition)
        </dd>

        <dt>
            @Html.Label("ISBN")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la liste", "Index")
        </div>
    }
</div>
